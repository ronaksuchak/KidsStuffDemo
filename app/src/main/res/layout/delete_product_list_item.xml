<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">


	<TextView
			android:text="Product Name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textViewProductNameRV"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="32dp"
			android:layout_marginStart="32dp"
			android:layout_marginTop="32dp"
			app:layout_constraintTop_toTopOf="parent" android:maxEms="10" android:singleLine="true"/>
	<TextView
			android:text="Price:100$"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textViewPrice"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/textViewProductNameRV"/>
	<ImageView
			android:layout_width="100dp"
			android:layout_height="100dp"
			tools:srcCompat="@tools:sample/avatars"
			android:id="@+id/imageView2"
			android:layout_marginTop="16dp"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginBottom="16dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/textViewPrice"
			android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toStartOf="@+id/button2"/>
	<TextView
			android:text="View:100"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textViewView"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="32dp"
			android:layout_marginStart="32dp"
			android:layout_marginTop="32dp"
			app:layout_constraintTop_toBottomOf="@+id/textViewProductNameRV"/>
	<Button
			android:text="Delete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent" android:backgroundTint="@color/design_default_color_error"
			android:textColor="@color/common_google_signin_btn_text_dark_default"/>
</androidx.constraintlayout.widget.ConstraintLayout>